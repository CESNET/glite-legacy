function config_glite_lb(){
	#check if config_glite_init is loaded
	source ${FUNCTIONS_DIR}/config_glite_init
	config_glite_init
	
	#	Configure gLite LB
	run_glite_command glite-lb-config.py --conf
    #	Start gLite LB
    run_glite_command glite-lb-config.py --start
}